<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_content_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3E3E3"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/ib_setting"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/selec_setting" />

        <ImageButton
            android:id="@+id/ib_chang_bg"
            android:layout_width="20dp"
            android:layout_height="23dp"
            android:layout_marginLeft="270dp"
            android:background="@drawable/selec_change_bg" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_volume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:text="Tip:在此界面按音量键会同时调节所有音量"
        android:textSize="14sp" />

    <!--
         <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_margin="8dp"
        
        android:background="#DBE7D4" />
    -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/ib_silent"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/selec_silent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="静音" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/ib_recovery"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/selec_recovery" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="还原" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_contain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="40dp"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/ll_music_volume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_show_music_volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="媒体音量"
                android:textSize="22sp" />

            <SeekBar
                android:id="@+id/sb_music_volume"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_ring_volume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_show_ring_volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="铃声音量"
                android:textSize="22sp" />

            <SeekBar
                android:id="@+id/sb_ring_volume"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_notify_volume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_show_notify_volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="通知音量"
                android:textSize="22sp" />

            <SeekBar
                android:id="@+id/sb_notify_volume"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_alarm_volume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_show_alarm_volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="闹钟音量"
                android:textSize="22sp" />

            <SeekBar
                android:id="@+id/sb_alarm_volume"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_system_volume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_show_system_volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="系统音量"
                android:textSize="22sp" />

            <SeekBar
                android:id="@+id/sb_system_volume"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>